extends base

block content
    .all-title-box
        .container
         .row
             .col-lg-12
                h2 My Orders
                ul.breadcrumb
                    li.breadcrumb-item
                        a(href='/') Home
                    li.breadcrumb-item.active Orders

    .cart-box-main
        .container
            -sum=0
            .row
                .col-lg-12
                    .table-main.table-responsive
                        table.table
                            thead
                                tr
                                    th Order No
                                    th Order Placed On
                                    th Total Products
                                    th Total Price
                                    th Estimated Delivery Date                             
                            tbody
                                each order,i in user.currentOrders
                                    tr.cartProducts
                                        td.thumbnail-img
                                            p= i+1
                                        td.thumbnail-img
                                            p= (order.createdAt).toString().slice(4,16)
                                        td.name-pr
                                            p= order.products.length
                                        td.price-pr
                                            p= `â‚¹ ${order.totalPrice}`
                                        td.thumbnail-img
                                            p= order.estimateDelivery.toString().slice(4,16)