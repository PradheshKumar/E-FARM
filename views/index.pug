extends base

block content 
  
  // End Top Search
  // Start Slider
  #slides-shop.cover-slides(style="height:500.6px")
    ul.slides-container
      li.text-center
        img(src='images/banner-01.jpg' alt='')
        .container
          .row
            .col-md-12
              h1.m-b-20
                strong
                  | Welcome To E-FARM
              p.m-b-40
                | Experience buying farm fresh products directly from the farmers.
                br
                |  Empowering Farmers
      li.text-center
        img(src='images/banner-02.jpg' alt='')
        .container
          .row
            .col-md-12
              h1.m-b-20
                strong
                  | Experience Quality Products
              p.m-b-40
                | Experience buying farm fresh products directly from the farmers. 
                br

      li.text-center
        img(src='images/banner-03.jpg' alt='')
        .container
          .row
            .col-md-12
              h1.m-b-20
                strong
                  | Quality Products Delivered To you
              p.m-b-40
                | Get Products Delivered to your Doorstep
              
    .slides-navigation
      a.next(href='#')
        i.fa.fa-angle-right(aria-hidden='true')
      a.prev(href='#')
        i.fa.fa-angle-left(aria-hidden='true')
  // End Slider
  // Start Categories
  .categories-shop
    .container
      .row
        .col-lg-4.col-md-4.col-sm-12.col-xs-12
          .shop-cat-box
            img.img-fluid(src='images/categories_img_01.jpg' alt='' onError="this.src = './../img/default.jpg'")
            a.btn.hvr-hover(href='/overview/?type=vegetable') Fresh Vegetables
        .col-lg-4.col-md-4.col-sm-12.col-xs-12
          .shop-cat-box
            img.img-fluid(src='images/categories_img_02.jpg' alt='' onError="this.src = './../img/default.jpg'")
            a.btn.hvr-hover(href='/overview/?type=fruit') Fresh Fruits
        .col-lg-4.col-md-4.col-sm-12.col-xs-12
          .shop-cat-box
            img.img-fluid(src='images/categories_img_03.jpg' alt='' onError="this.src = './../img/default.jpg'")
            a.btn.hvr-hover(href='/overview/?type=leaf') Fresh Leafs
  // End Categories
  
  // Start Products
  .products-box
    .container
      .row
        .col-lg-12
          .title-all.text-center
            h1 Fruits &amp; Vegetables
          
      .row
        .col-lg-12
          .special-menu.text-center
            .button-group.filter-button-group
              button.btn-filter.active(data-filter='*') All
              button.btn-filter(data-filter='.top-featured') Top featured
              button.btn-filter(data-filter='.best-seller') Best seller
      .row.special-list
        each product,i in products
          if(i%2 ==0)
            .col-lg-3.col-md-6.special-grid.top-featured
              .products-single.fix
                a(href=`/product/${product.id}` )
                  .box-img-hover
                    img.img-fluid(src=`./../img/${product.images[0]}` alt='Image' onError="this.src = './../img/default.jpg'")
                  
                        
                  .why-text
                    h4= product.name
                    h5=`₹ ${product.price} per ${product.costPer} `
          else 
            .col-lg-3.col-md-6.special-grid.best-seller
              .products-single.fix
                a(href=`/product/${product.id}` )
                  .box-img-hover
                    img.img-fluid(src=`./../img/${product.images[0]}` alt='Image' onError="this.src = './../img/default.jpg'")
                  
                  .why-text
                    a(href=`/product/${product.id}` )
                      h4= product.name
                      h5=`₹ ${product.price} per ${product.costPer} `
    